extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/shop.css")

block content
  section.shop
    h1 Your Cart
    if products.length > 0
      div.products
        each product in products
          div.card
            div.card-content
              p.title.is-4 Title: #{product.title}
              p.title.is-6 Quantity: #{product.quantity}
            div.card-footer
              form(action="/cart-delete-item" method="POST").card-footer-item
                input(type="hidden" value=`${product._id}` name="productId")
                button(type="submit").button.is-danger Remove
      form(action="/create-order" method="POST")
        button(type="submit").button.is-success Order Now!
    else
      h1 Your cart is empty.
