extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/shop.css")

block content
  section.shop
    h1 My Products
    if products.length > 0
      div.products
        each product in products
          div.card
            div.card-image
              figure.image.is-4by3 
                img(src="https://cdn.pixabay.com/photo/2016/03/31/20/51/book-1296045_960_720.png", alt="Book image")
            div.card-content
              p.title.is-4 #{product.title}
            div.card-footer
              form(action="/cart" method="POST")
                button(type="submit").button.is-success Add to Cart
                input(type="hidden" name="productId" value=`${product.id}`)
    else
      h1 No Products

