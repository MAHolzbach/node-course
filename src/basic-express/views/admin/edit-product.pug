extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/shop.css")

block content
  section.section.form-section
    form(action='/admin/add-product', method='POST')
      label.label Product Name
      div.field
        div.control
          input(type='text', name='title', value=(product ? `${product.title}` : '')).input#title
      label.label Image URL
      div.field
        div.control
          input(type='text', name='imageUrl' value=(product ? `${product.imageUrl}` : '')).input#imageUrl
      label.label Price
      div.field
        div.control
          input(type='number', name='price' step="0.01" value=(product ? `${product.price}` : '')).input#price
      label.label Description
      div.field
        div.control
          textarea(type='text', name='description').textarea#description #{product ? product.description : ''}
      div.control
        button(type='submit').button.is-primary Add Product
